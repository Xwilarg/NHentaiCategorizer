{
    "name": "NHentai Categorizer",
    "version": "0.0.1",
    "description": "Order your NHentai favorites inside categories",
    "browser_action": {
        "default_popup": "html/index.html"
    },
    "permissions": [
        "https://nhentai.net/favorites/*",
        "storage"
    ],
    "author": "Xwilarg",
    "content_scripts": [{
        "matches": [
            "https://nhentai.net/favorites/*"
        ],
        "css": ["css/style.css"],
        "js": ["js/content.js"]
    }],
    "manifest_version": 2
}